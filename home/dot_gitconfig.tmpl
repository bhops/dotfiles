[alias]
	a = add
	b = branch
	c = commit
	ca = commit --amend
	cm = commit --message
	d = diff
	dc = diff --cached
	ds = diff --staged
	l = log
	lg = log --graph
	lo = log --oneline
	co = checkout
	cob = checkout -b
	s = status --short --branch
[core]
	editor = nvim
	excludesfile = ~/.gitignore_global
[fetch]
	prune = true
[init]
	defaultBranch = main
[user]
	name = {{ .name | quote }}
	email = {{ .email | quote }}
[push]
	autoSetupRemote = true
{{- if .work }}
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
[filter "lfs"]
       clean = git-lfs clean -- %f
       smudge = git-lfs smudge -- %f
       process = git-lfs filter-process
       required = true
{{- end -}}